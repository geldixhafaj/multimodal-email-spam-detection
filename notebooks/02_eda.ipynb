# 02_eda.ipynb
# Exploratory Data Analysis (EDA) — assumes Notebook 01 has already prepared the dataset file.
# This notebook is intentionally separate: it does NOT download from Kaggle or configure API keys.

# =========================
# CELL 1 — Imports & paths
# =========================
import os
import re

import pandas as pd
import matplotlib.pyplot as plt
import seaborn as sns

from sklearn.model_selection import train_test_split

sns.set(style="whitegrid")

DATA_DIR = "/content/data"
ASSETS_DIR = "/content/assets/figures"
os.makedirs(ASSETS_DIR, exist_ok=True)

# Notebook 01 output (pick ONE and keep it consistent)
CANDIDATE_PATHS = [
    os.path.join(DATA_DIR, "spam_emails_clean.csv"),  # from Notebook 01 (recommended)
    os.path.join(DATA_DIR, "spam.csv"),               # if your extracted CSV uses this name
]

DATASET_PATH = next((p for p in CANDIDATE_PATHS if os.path.exists(p)), None)
if DATASET_PATH is None:
    raise FileNotFoundError(
        "Dataset not found in /content/data.\n"
        "Run 01_download_data.ipynb first (in the same Colab runtime), "
        "or ensure spam_emails_clean.csv exists at /content/data/."
    )

print("Using dataset:", DATASET_PATH)

# =========================
# CELL 2 — Load & standardise schema
# =========================
df = pd.read_csv(DATASET_PATH)

# Standardise expected schema: Category (ham/spam), Message (text)
col_map = {}
for c in df.columns:
    if c.lower() in ["category", "label", "target", "class"]:
        col_map[c] = "Category"
    if c.lower() in ["message", "text", "email", "sms"]:
        col_map[c] = "Message"
if col_map:
    df = df.rename(columns=col_map)

if "Category" not in df.columns or "Message" not in df.columns:
    raise ValueError(f"Expected columns 'Category' and 'Message'. Found: {list(df.columns)}")

df = df.dropna(subset=["Category", "Message"]).copy()
df["Category"] = df["Category"].astype(str).str.strip().str.lower()
df["Message"] = df["Message"].astype(str)

df = df[df["Category"].isin(["ham", "spam"])].copy()

print("Dataset shape:", df.shape)
print("Label counts:\n", df["Category"].value_counts())
df.head()

# =========================
# CELL 3 — EDA: Class distribution (C3_01)
# =========================
label_counts = df["Category"].value_counts()

plt.figure(figsize=(5, 4))
label_counts.plot(kind="bar")
plt.title("Class Distribution (Ham vs Spam)")
plt.xlabel("Class")
plt.ylabel("Number of Messages")
plt.tight_layout()
plt.savefig(os.path.join(ASSETS_DIR, "class_distribution.png"), dpi=300)
plt.show()

# =========================
# CELL 4 — EDA: Message length (characters) (C3_02)
# =========================
df["char_length"] = df["Message"].str.len()

plt.figure(figsize=(6, 4))
sns.histplot(df["char_length"], bins=50, kde=False)
plt.title("Message Length Distribution (Characters)")
plt.xlabel("Characters")
plt.ylabel("Frequency")
plt.tight_layout()
plt.savefig(os.path.join(ASSETS_DIR, "char_length_distribution.png"), dpi=300)
plt.show()

# =========================
# CELL 5 — EDA: Message length (words) (C3_03)
# =========================
df["word_length"] = df["Message"].str.split().apply(len)

plt.figure(figsize=(6, 4))
sns.histplot(df["word_length"], bins=50, kde=False)
plt.title("Message Length Distribution (Words)")
plt.xlabel("Words")
plt.ylabel("Frequency")
plt.tight_layout()
plt.savefig(os.path.join(ASSETS_DIR, "word_length_distribution.png"), dpi=300)
plt.show()

# =========================
# CELL 6 — EDA: URL count distribution (C3_04)
# =========================
url_pattern = re.compile(r"http[s]?://|www\.", re.IGNORECASE)
df["url_count"] = df["Message"].apply(lambda x: len(url_pattern.findall(x)))

plt.figure(figsize=(6, 4))
sns.histplot(df["url_count"], bins=10, discrete=True)
plt.title("URL Count per Message")
plt.xlabel("Number of URLs")
plt.ylabel("Frequency")
plt.tight_layout()
plt.savefig(os.path.join(ASSETS_DIR, "url_count_distribution.png"), dpi=300)
plt.show()

# =========================
# CELL 7 — EDA: Uppercase ratio distribution (optional) (C3_05)
# =========================
def uppercase_ratio(text: str) -> float:
    if not text:
        return 0.0
    return sum(1 for c in text if c.isupper()) / max(len(text), 1)

df["uppercase_ratio"] = df["Message"].apply(uppercase_ratio)

plt.figure(figsize=(6, 4))
sns.histplot(df["uppercase_ratio"], bins=50, kde=False)
plt.title("Uppercase Character Ratio")
plt.xlabel("Uppercase Ratio")
plt.ylabel("Frequency")
plt.tight_layout()
plt.savefig(os.path.join(ASSETS_DIR, "uppercase_ratio_distribution.png"), dpi=300)
plt.show()

# =========================
# CELL 8 — Stratified train/val/test split (M2_08)
# =========================
SEED = 42

train_df, test_df = train_test_split(
    df, test_size=0.2, stratify=df["Category"], random_state=SEED
)
train_df, val_df = train_test_split(
    train_df, test_size=0.1, stratify=train_df["Category"], random_state=SEED
)

train_path = os.path.join(DATA_DIR, "train.csv")
val_path = os.path.join(DATA_DIR, "val.csv")
test_path = os.path.join(DATA_DIR, "test.csv")

train_df.to_csv(train_path, index=False)
val_df.to_csv(val_path, index=False)
test_df.to_csv(test_path, index=False)

print("Train:", train_df.shape)
print("Val:  ", val_df.shape)
print("Test: ", test_df.shape)

print("\nLabel distribution per split:")
print("Train:\n", train_df["Category"].value_counts())
print("Val:\n", val_df["Category"].value_counts())
print("Test:\n", test_df["Category"].value_counts())

print("\nSaved splits to:")
print(" -", train_path)
print(" -", val_path)
print(" -", test_path)

print("\nSaved figures to:", ASSETS_DIR)
